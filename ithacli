# :command.run
run() {
  declare -A args=()
  declare -A deps=()
  declare -a other_args=()
  declare -a env_var_names=()
  declare -a input=()
  normalize_input "$@"
  parse_requirements "${input[@]}"

  case "$action" in
    "setup") ithacli_setup_command ;;
    "list") ithacli_list_command ;;
    "apply") ithacli_apply_command ;;
  esac
}

initialize
run "$@"
